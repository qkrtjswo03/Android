<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toStartOf="@+id/foodDdayTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/foodNameTxt"
        android:layout_width="102dp"
        android:layout_height="34dp"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/foodImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foodDateTxt"
        android:layout_width="95dp"
        android:layout_height="26dp"
        android:layout_marginStart="128dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/foodImageView"
        app:layout_constraintTop_toBottomOf="@+id/foodNameTxt" />

    <TextView
        android:id="@+id/foodDdayTxt"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>